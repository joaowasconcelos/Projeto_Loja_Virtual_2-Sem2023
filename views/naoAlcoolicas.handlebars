{{#section 'styles'}}
<link rel="stylesheet" href="css/naoAlcoolicas.css">
{{/section}}
 {{#if Produto}}
    <div class="grid">
    {{#each Produto}}
        <div class="item">
            <img src="{{imagemProduto}}" alt="">
            <h3>{{nome}}</h3>
            <h2>R$ {{preco}}</h2>
            {{#if dataClient}}
                <a method="post" href="/carrinho/{{id}}"><input type="button" value="Adicionar ao Carrinho"></a>
            {{else}}
                <a method="post" href="/cadastro"><input type="button" value="Adicionar ao Carrinho"></a>
            {{/if}}
        </div> 
    {{/each}}
    </div>
    {{/if}}